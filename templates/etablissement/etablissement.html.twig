{% extends 'base.html.twig' %}

{% block title %}{{ Etablissement.nom }}{% endblock %}

{% block body %}

    <div class="d-flex mt-2 ms-5">
        <div style="background-color: #FFFFFF;  width: 65%; border-radius: 20px; padding: 40px; max-height: 700px">
            <h1 >{{ Etablissement.nom }}</h1>
            {%for categorie in Etablissement.categorie %}
                <h5>{{ categorie.nom }}</h5>
            {%endfor %}
            <p class="mx-auto " style="font-size: 20px; background-color: #D9D9D9; border-radius: 20px; padding: 10px ; padding-left: 30px; height: 50px; width: 100%">{{ Etablissement.Adresse }} {{ Etablissement.ville.CodePostal }} {{ Etablissement.ville.nom }}</p>
            <div class="mx-auto" style="font-size: 20px; background-color: #D9D9D9; border-radius: 20px; padding: 30px; height: 60%; width: 100%">{{ Etablissement.description }}</div>
            <div style="display: flex; flex-direction: row-reverse; margin-top: 10px">
                <p>{{ Etablissement.createdAt | date('d-m-Y') }}</p>
            </div>


        </div>
        <div style="width: 25%;margin-left: 40px">
            <div style="background-color: #FFFFFF; height: 510px; width: 100%; border-radius: 20px">
                <div style="padding:40px;">
                    <h1 style="">Météo a {{  Etablissement.ville.nom }}</h1>
                    <p style="font-size: 20px; margin-top:40px; background-color: #D9D9D9; border-radius: 20px; padding: 10px ; padding-left: 30px; height: 100%; width: 100%">Pour l'instant, il faut beau</p>
                </div>
            </div>
            <div style="background-color: #FFFFFF; height: 150px; width: 100%; margin-top: 40px; border-radius: 20px;display: flex;justify-content: center;align-items: center;">
                <div class="d-flex" style="justify-content: space-evenly; width: 100%">
                    {% if app.user %}
                        {% if Etablissement in app.user.EtablissementFavorits %}
                            <a style="background-color: #D9D9D9; width: 30%; height: 50px; text-decoration: none; color: black; display: flex;justify-content: center;align-items: center; border-radius: 10px" href="{{ path("app_etablissementdetail_slug_fav", {'slug': Etablissement.slug}) }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                </svg>
                                                          </a>
                        {% else %}
                            <a style="background-color: #D9D9D9; width: 30%; height: 50px; text-decoration: none; color: black; display: flex;justify-content: center;align-items: center; border-radius: 10px" href="{{ path("app_etablissementdetail_slug_fav", {'slug': Etablissement.slug}) }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                    <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                                </svg>
                            </a>
                        {% endif%}
                    {% endif %}
                    <a style="background-color: #D9D9D9; width: 30%; height: 50px; text-decoration: none; color: black; display: flex;justify-content: center;align-items: center; border-radius: 10px" href="{{ path("app_etablissements") }}">Retour</a>


                </div>
            </div>
        </div>
    </div>

{% endblock %}