{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
<h1>Bienvenue sur FCTourisme</h1>
    <h3>Voici les 4 dernier etablissements :</h3>
    <div class="container text-center">
        <div class="row row-cols-auto">
            {% for Etablissement in Etablissements %}
                <div class="col">
                    <div class="card mt-4" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ Etablissement.nom }}{% if app.user %}
                                    {% if Etablissement in app.user.EtablissementFavorits %}
                                        <a  class=" ms-2" href="{{ path("app_etablissement_slug_fav", {'slug': Etablissement.slug}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark-fill" viewBox="0 0 16 16">
                                                <path d="M2 2v13.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2z"/>
                                            </svg></a>
                                    {% else %}
                                        <a class=" ms-2" href="{{ path("app_etablissement_slug_fav", {'slug': Etablissement.slug}) }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark" viewBox="0 0 16 16">
                                                <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z"/>
                                            </svg>
                                        </a>
                                    {% endif%}
                                {% endif %}</h5>
                            {% for categorie in Etablissement.categorie %}
                                <span class="badge rounded-pill text-bg-secondary">{{ categorie.nom }}</span>
                            {% endfor %}

                            <p class="mt-3">{{ Etablissement.ville.nom }} | {{ Etablissement.ville.codePostal }}</p>
                            <hr>

                            <p class="card-text">{{ Etablissement.description[:75] }} ... </p>
                            <div class="d-flex justify-content-end">
                                <a class="btn btn-sm "
                                   href="{{ path("app_etablissement_slug", {'slug': Etablissement.slug}) }}">Voir
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                         class="bi bi-eye-fill" viewBox="0 0 16 16">
                                        <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                                        <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
